<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Digital Krishi | Login & Register</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Static CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    .auth-section {
  padding: 80px 20px;
  background: #f7f5f0;
  text-align: center;
}

.auth-title {
  font-size: 2.3em;
  color: #004d40;
  margin-bottom: 40px;
}

.auth-container {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
}

.auth-card {
  background: #fff;
  width: 340px;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

.auth-card h3 {
  color: #2F7C30;
  margin-bottom: 20px;
}

.auth-card input {
  width: 100%;
  padding: 12px;
  margin-bottom: 15px;
  border-radius: 6px;
  border: 1px solid #ccc;
}

.auth-btn {
  width: 100%;
  padding: 12px;
  background: #2F7C30;
  color: white;
  border: none;
  border-radius: 6px;
  font-weight: bold;
  cursor: pointer;
}

.auth-btn:hover {
  background: #255d26;
}

  </style>
</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar">
    <div class="navbar-left">
      <div class="logo-placeholder">DK</div>
      <span class="brand-name">Digital Krishi</span>
    </div>

    <ul class="nav-links">
      <li><a href="#">About</a></li>
      <li><a href="#">Impact</a></li>
      <li><a href="#">Training</a></li>
      <li><a href="#">Technology</a></li>
    </ul>

    <a href="#auth" class="donate-button">Farmer Portal</a>
  </nav>

  <!-- AUTH SECTION -->
  <section class="auth-section" id="auth">
    <h2 class="auth-title">Farmer Portal</h2>

    <div class="auth-container">

      <!-- LOGIN -->
      <div class="auth-card">
        <h3>Login</h3>
        <form action="/login" method="POST">
          <input type="email" name="email" placeholder="Email" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit" class="auth-btn">Login</button>
        </form>
      </div>

      <!-- REGISTER -->
      <div class="auth-card">
        <h3>Register</h3>
        <form action="/register" method="POST">
          <input type="text" name="username" placeholder="Username" required>
          <input type="text" name="name" placeholder="Full Name" required>
          <input type="number" name="age" placeholder="Age" required>
          <input type="email" name="email" placeholder="Email" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit" class="auth-btn">Register</button>
        </form>
      </div>

    </div>
  </section>

  <!-- FOOTER -->
  <footer class="dk-footer">
    <div class="footer-bottom">
      <p>&copy; 2025 Digital Krishi. All Rights Reserved.</p>
    </div>
  </footer>

</body>
</html>
